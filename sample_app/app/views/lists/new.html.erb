<h1>신규 작성</h1>

<% if @list.errors.any? %>
  <%= @list.errors.count %>건의 에러가 발생했습니다.
  <ul>
    <% @list.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
  </ul>
<% end %>

<!-- form_withにオプション追記 -->
<%= form_with model: @list, url: '/lists', method: :post do |f| %>

  <h4>제목</h4>
  <%= f.text_field :title %>
  
  <h4>본문</h4>
  <%= f.text_area :body %>
  
  <h4>이미지</h4>
  <%= f.file_field :image, accept: 'image/*' %>
  
  <%= f.submit '投稿' %>
  
<% end %>